@model LoginVM
@{
    Layout = "_LayoutAuth";
    ViewData["Title"] = "Login";
}
<div class="wrapper">
    <h2>Login</h2>
    <form method="post">
        <div class="input-box">
            <input asp-for="Username" placeholder="Enter unique username" required>
            <span asp-validation-for="Username"></span>
        </div>
        <div class="input-box">
            <input asp-for="Password" placeholder="Create password" required>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="policy">
            <input asp-for="Remember" type="checkbox">
            <h3>Remember me</h3>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="input-box button">
            <input type="Submit" value="Login Now">
        </div>
    </form>
</div>